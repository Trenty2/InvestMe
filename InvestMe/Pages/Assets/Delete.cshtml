@page
@model InvestMe.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<html lang="en">
<main id="main">

    <!-- ======= Information Section ======= -->
    <section id="about" class="about">
        <div data-aos="fade-up">
            Deleting assets is final and you can not retrieve them once removed.
        </div>
    </section><!-- End About Information -->
    <!-- ======= Content Section ======= -->
    <section id="services" class="services section-bg">
        <div class="container">

            <h1>Delete</h1>

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>Asset</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Asset.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Asset.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Asset.PurchasePrice)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Asset.PurchasePrice)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Asset.CurrentPrice)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Asset.CurrentPrice)
                    </dd>
                </dl>

                <form method="post">
                    <input type="hidden" asp-for="Asset.ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="./Index">Back to List</a>
                </form>
            </div>


        </div>
    </section><!-- End Content Section -->


</main><!-- End #main -->
