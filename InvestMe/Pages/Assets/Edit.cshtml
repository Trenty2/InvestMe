@page
@model InvestMe.EditModel

@{
    ViewData["Title"] = "Edit";
}

!DOCTYPE html>
<html lang="en">
<main id="main">

    <!-- ======= Information Section ======= -->
    <section id="about" class="about">
        <div data-aos="fade-up">

        </div>
    </section><!-- End About Information -->
    <!-- ======= Content Section ======= -->
    <section id="services" class="services section-bg">
        <div class="container">

            <h1>Modify your Asset</h1>

            <h4>Asset</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Asset.ID" />
                        <div class="form-group">
                            <label asp-for="Asset.Name" class="control-label"></label>
                            <input asp-for="Asset.Name" class="form-control" />
                            <span asp-validation-for="Asset.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Asset.PurchasePrice" class="control-label"></label>
                            <input asp-for="Asset.PurchasePrice" class="form-control" />
                            <span asp-validation-for="Asset.PurchasePrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Asset.CurrentPrice" class="control-label"></label>
                            <input asp-for="Asset.CurrentPrice" class="form-control" />
                            <span asp-validation-for="Asset.CurrentPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-page="./Index">Back to Assets</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }


        </div>
    </section><!-- End Content Section -->


</main><!-- End #main -->
