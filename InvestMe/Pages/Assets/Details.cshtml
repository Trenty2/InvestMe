@page
@model InvestMe.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<html lang="en">
<main id="main">

    <!-- ======= Information Section ======= -->
    <section id="about" class="about">
        <div data-aos="fade-up">

        </div>
    </section><!-- End About Information -->
    <!-- ======= Content Section ======= -->
    <section id="services" class="services section-bg">
        <div class="container">
            <h1>Details</h1>

            <div>
                <h4>Asset</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Asset.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Asset.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Asset.PurchasePrice)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Asset.PurchasePrice)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Asset.CurrentPrice)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Asset.CurrentPrice)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Asset.ID">Edit</a> |
                <a asp-page="./Index">Back to Assets</a>
            </div>


        </div>
    </section><!-- End Content Section -->


</main><!-- End #main -->
