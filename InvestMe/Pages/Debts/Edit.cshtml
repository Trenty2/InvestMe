@page
@model InvestMe.Pages.Debts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Debt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Debt.ID" />
            <div class="form-group">
                <label asp-for="Debt.Creditor" class="control-label"></label>
                <input asp-for="Debt.Creditor" class="form-control" />
                <span asp-validation-for="Debt.Creditor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Debt.InitialDebt" class="control-label"></label>
                <input asp-for="Debt.InitialDebt" class="form-control" />
                <span asp-validation-for="Debt.InitialDebt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Debt.CurrentDebt" class="control-label"></label>
                <input asp-for="Debt.CurrentDebt" class="form-control" />
                <span asp-validation-for="Debt.CurrentDebt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
